<div class = "my-pages">
  <div class = "container-fluid my-con">
    <div class = "container my-pages">
    <%= form_tag new_recipe_path do |f| %>

        <%= label_tag "Name" %>
        <%= text_field_tag "recipe_form[name]" %>

        <%= label_tag "Preptime" %>
        <%= text_field_tag "recipe_form[preptime]" %>

        <%= label_tag "Cooktime" %>
        <%= text_field_tag "recipe_form[cooktime]" %>

        <%= label_tag "Cook Temperature" %>
        <%= text_field_tag "recipe_form[cooktemp]" %>

        <%= label_tag "Directions" %>
        <%= text_field_tag "recipe_form[directions]" %>

        <%= label_tag "Creator" %>
        <%= text_field_tag "recipe_form[creator]" %>

        <% @ingredients.each do |ingredient| %>
            <%= check_box_tag "recipe_form[ingredients][]", ingredient.id %>
            <%= label_tag "recipe_form[ingredients][]", ingredient.name %>
        <% end %>



    <%= submit_tag %>

    <% end %>
    </div>
  </div>
</div>
